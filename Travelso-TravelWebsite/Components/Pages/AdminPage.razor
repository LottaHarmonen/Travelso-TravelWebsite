    private void SelectUser(TravelsoUser user)
    {
        userMail = user.Email;
        userCountry = user.Country;
    }

    private async Task AddNewCountry()
    {
        //create new country
        Country newCountry = new Country()
        {
            Name = newCountryName,
            ImageURL = newCountryFlagUrl
